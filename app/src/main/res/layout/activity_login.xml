<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/bg_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80606060"
        android:padding="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="ยินดีต้อนรับ"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/bg_white_rad10"
            android:hint="กรอกอีเมล"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColorHint="#7a7a9f" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_rad10"
            android:hint="รหัสผ่าน"
            android:inputType="textPassword"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColorHint="#7a7a9f" />

        <EditText
            android:id="@+id/etPartner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_rad10"
            android:gravity="center"
            android:hint="เลือกพาร์ทเนอร์"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#7a7a9f"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:buttonTint="@color/white"
            android:text="บันทึกรหัสผ่าน"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/bg_white_rad10"
            android:backgroundTint="#4DB8FF"
            android:text="เข้าสู่ระบบ"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>