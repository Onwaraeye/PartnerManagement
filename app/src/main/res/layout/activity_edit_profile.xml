<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_black_gradient"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="แก้ไขโปรไฟล์"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ic_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/percent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="40dp"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle_stroke"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile_user" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="ชื่อ - นามสกุล" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:ems="10"
        android:padding="10dp"
        android:gravity="center"
        android:textColorHint="#E68A8A8A"
        android:inputType="textPersonName"
        android:background="@drawable/bg_white_rad5"
        android:hint="Admin Dash" />

    <Button
        android:id="@+id/button_edited"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_white_rad5"
        android:backgroundTint="#A2A2A2"
        android:textColor="@color/white"
        android:text="แก้ไขเรียบร้อย" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="เปลี่ยนรหัสผ่านเข้าใช้งาน" />

    <Button
        android:id="@+id/button_password_change_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_rad5"
        android:backgroundTint="#14AF24"
        android:text="ส่งคำขอเปลี่ยนแปลงรหัสผ่าน" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:text="*เมื่อท่านส่งคำขอเพื่อเปลี่ยนแปลงรหัสผ่านแล้วโปรดตรวจสอบจดหมายในอีเมลของท่าน" />

</LinearLayout>
</LinearLayout>